<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:elevation="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/singleItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/usernamebackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="UserName"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/listquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/userAddress"
            android:text="Quantity: "
            android:textSize="18sp" />

        <TextView
            android:layout_below="@+id/user_name"
            android:id="@+id/userContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/userContact"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Address: " />

        <TextView
            android:id="@+id/ngoLocaionUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listquantity"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:text="NGO Location" />


    </RelativeLayout>
</android.support.v7.widget.CardView>